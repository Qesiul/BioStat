<UserControl x:Class="BioStat.MVVM.View.BmiView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BioStat.MVVM.View"
             xmlns:viewmodel="clr-namespace:BioStat.MVVM.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="600">
    
    <UserControl.DataContext>
        <viewmodel:BmiViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <RadioButton 
                IsChecked="True"
                Content="Metric"
                Margin="-25,0,0,0"
                Style="{StaticResource UnitTypeButtonTheme}"
                />
            
            <RadioButton 
                Content="Imperial"
                Margin="125,0,0,0"
                Style="{StaticResource UnitTypeButtonTheme}"
            />
        </StackPanel>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Center">
            <TextBlock 
                Text="Height:"
                FontSize="16"
                Margin="0,50,0,5"/>
            <StackPanel Orientation="Horizontal">
            <TextBox PreviewTextInput="NumberOnlyTextBox"
                     Visibility="Visible"
                     Width="300"
                     FontSize="16"
                     BorderThickness="3"
                     Margin="0, 0, 0, 0"
                     Style="{StaticResource RoundedTextBox}"
            />
            <TextBlock
                Visibility="Visible"
                Text="cm"
                FontSize="14"
                Margin="3,8,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
            <TextBox PreviewTextInput="NumberOnlyTextBox"
                     Visibility="Collapsed"
                     Width="140"
                     FontSize="16"
                     BorderThickness="3"
                     Style="{StaticResource RoundedTextBox}"
                />
            <TextBlock
                Visibility="Collapsed"
                Text="ft"
                FontSize="14"
                Margin="3, 8,0,0"/>
            <TextBox PreviewTextInput="NumberOnlyTextBox"
                     Visibility="Collapsed"
                     Width="140"
                     FontSize="16"
                     BorderThickness="3"
                     Margin="7,0,0,0"
                     Style="{StaticResource RoundedTextBox}"
                     />
            <TextBlock
                Visibility="Collapsed"
                Text="in"
                FontSize="14"
                Margin="3,8,0,0"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</UserControl>
